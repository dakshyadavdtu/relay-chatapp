# Backend port for Vite proxy (/api + /ws). Must match backend PORT in dev.
VITE_BACKEND_PORT=8000

# Production (e.g. Vercel frontend + Render backend): required. No Vercel proxy; frontend calls backend directly.
# VITE_BACKEND_HTTP_URL=https://your-backend.onrender.com
# VITE_BACKEND_WS_URL=wss://your-backend.onrender.com/ws

# Enable WebSocket in dev. Set to "true" when backend is running so chat connects and admin sees connections.
# When false or unset, frontend skips wsClient.connect(); messages queue and admin shows 0 connections.
VITE_ENABLE_WS=true
